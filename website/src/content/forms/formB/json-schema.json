{
  "type": "object",
  "properties": {
    "project_name": { "type": "string", "title": "Research Project Name" },
    "project_description": { "type": "string", "title": "Project Description" },
    "institution_type": {
      "type": "string",
      "title": "Institution Type",
      "enum": [
        "University",
        "Nonprofit",
        "Government",
        "Corporation",
        "Independent Researcher",
        "Not Listed"
      ]
    },
    "institution_name": { "type": "string", "title": "Institution Name" },
    "principal_investigator": {
      "type": "object",
      "properties": {
        "first_name": { "type": "string", "title": "PI First Name" },
        "middle_name": { "type": "string", "title": "PI Middle Name" },
        "last_name": { "type": "string", "title": "PI Last Name" },
        "title": { "type": "string", "title": "PI Title" },
        "email": { "type": "string", "format": "email", "title": "PI Email" },
        "phone": { "type": "string", "title": "PI Phone" }
      },
      "title": "Principal Investigator",
      "required": ["first_name", "last_name", "title", "email", "phone"]
    },
    "budget": { "type": "string", "title": "Total Budget (USD)" },
    "kickoff": { "type": "string", "format": "date", "title": "Kick-off Date" },
    "completion": {
      "type": "string",
      "format": "date",
      "title": "Completion Date"
    }
  },
  "required": [
    "project_name",
    "project_description",
    "institution_type",
    "institution_name",
    "principal_investigator",
    "budget",
    "kickoff",
    "completion"
  ]
}
