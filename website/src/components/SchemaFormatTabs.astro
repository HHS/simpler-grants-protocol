---
import { Code } from "@astrojs/starlight/components";
import { Tabs, TabItem } from "@astrojs/starlight/components";

interface Props {
  example?: string;
  jsonSchema?: string;
  typeSpec?: string;
  python?: string;
}

const { example, jsonSchema, typeSpec, python } = Astro.props;
---

<Tabs>
  {
    example && (
      <TabItem label="Example">
        <p>A JSON example of this model.</p>
        <Code code={example} lang="json" />
      </TabItem>
    )
  }
  {
    jsonSchema && (
      <TabItem label="JSON Schema">
        <p>The JSON Schema for this model.</p>
        <Code code={jsonSchema} lang="yaml" />
      </TabItem>
    )
  }
  {
    typeSpec && (
      <TabItem label="TypeSpec">
        <p>The TypeSpec code for this model.</p>
        <Code code={typeSpec} lang="typespec" />
      </TabItem>
    )
  }
  {
    python && (
      <TabItem label="Python">
        <p>The Python code for this model.</p>
        <Code code={python} lang="python" />
      </TabItem>
    )
  }
</Tabs>
