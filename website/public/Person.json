{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "Person.json",
  "type": "object",
  "properties": {
    "name": {
      "$ref": "Name.json",
      "description": "The person's full name, including all relevant components (first, middle, last, etc.)."
    },
    "title": {
      "type": "string",
      "description": "The person's title, if applicable."
    },
    "addresses": {
      "$ref": "PersonAddressCollection.json",
      "description": "Collection of physical addresses associated with the person."
    },
    "phones": {
      "$ref": "PersonPhoneCollection.json",
      "description": "Collection of phone numbers associated with the person."
    },
    "fax": {
      "$ref": "Phone.json",
      "description": "The person's fax number, if applicable."
    },
    "emails": {
      "$ref": "PersonEmailCollection.json",
      "description": "Collection of email addresses associated with the person."
    }
  },
  "required": ["name"],
  "examples": [
    {
      "name": {
        "prefix": "Dr.",
        "firstName": "Jane",
        "middleName": "Edward",
        "lastName": "Doe",
        "suffix": "Jr."
      },
      "title": "Chief Executive Officer",
      "addresses": {
        "mailing": {
          "street1": "123 Main St",
          "city": "Anytown",
          "stateOrProvince": "CA",
          "country": "US",
          "postalCode": "12345"
        },
        "work": {
          "street1": "123 Main St",
          "city": "Anytown",
          "stateOrProvince": "CA",
          "country": "US",
          "postalCode": "12345"
        },
        "home": {
          "street1": "123 Main St",
          "city": "Anytown",
          "stateOrProvince": "CA",
          "country": "US",
          "postalCode": "12345"
        }
      },
      "phones": {
        "primary": {
          "countryCode": "+1",
          "number": "555-123-4567",
          "extension": "123",
          "isMobile": true
        },
        "work": {
          "countryCode": "+1",
          "number": "555-123-4567",
          "extension": "123",
          "isMobile": true
        },
        "home": {
          "countryCode": "+1",
          "number": "555-123-4567",
          "extension": "123",
          "isMobile": true
        },
        "otherPhones": {
          "international": {
            "countryCode": "+44",
            "number": "7700 900000"
          }
        }
      },
      "fax": {
        "countryCode": "+1",
        "number": "555-123-4567",
        "extension": "123",
        "isMobile": true
      },
      "emails": {
        "primary": "john.doe@example.com",
        "work": "john.doe@work.com",
        "personal": "john.doe@gmail.com",
        "otherEmails": {
          "school": "john.doe@school.edu"
        }
      }
    }
  ],
  "description": "A person affiliated with an organization or grant application."
}
