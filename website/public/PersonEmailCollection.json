{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "PersonEmailCollection.json",
  "type": "object",
  "properties": {
    "primary": {
      "$ref": "email.json",
      "description": "The person's primary email address."
    },
    "work": {
      "$ref": "email.json",
      "description": "The person's work email address."
    },
    "personal": {
      "$ref": "email.json",
      "description": "The person's personal email address."
    },
    "otherEmails": {
      "$ref": "#/$defs/RecordEmail",
      "description": "Additional email addresses not covered by the standard fields."
    }
  },
  "required": ["primary"],
  "examples": [
    {
      "primary": "john.doe@example.com",
      "work": "john.doe@work.com",
      "personal": "john.doe@gmail.com",
      "otherEmails": {
        "school": "john.doe@school.edu"
      }
    }
  ],
  "description": "A collection of email addresses for a person.",
  "$defs": {
    "RecordEmail": {
      "type": "object",
      "properties": {},
      "unevaluatedProperties": {
        "$ref": "email.json"
      }
    }
  }
}
